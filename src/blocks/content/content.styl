ul{
  padding: 0;
  margin: 0;
}
.comments-list{
  margin-top: 10px;
}
.comment{
  list-style: none;
  display: block;
  padding: 0;
  margin: 0;
  &:after{
    display: block;
    content: '';
    clear: both;
  }  
  &__img{
      float:left;
      margin-right: 10px;
  }
  &__title{
    padding-bottom: 10px;
  }
  &__num{
    color: green;
  }
  &__name{
    color: blue;
    padding-left: 5px;
    padding-right: 5px;
  }
  &__parent-name{
    color: lightblue;
    padding-left: 5px;
  }
  &__date{
    color: yellow;
    padding-bottom: 5px;
  }
  &__text{
    color: navy;
    padding-bottom: 5px;
  }
  &__links{
    padding-bottom: 5px;
  }
  &__link{
      padding-right: 5px;
      margin-bottom: 10px;
      &_reply{
        color: pink;
      }
      &_share{
        color: violet;
      }
  }
}
.is-children{
    margin-left: 90px;
}